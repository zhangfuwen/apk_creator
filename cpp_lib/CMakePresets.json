{
  "version": 3,
  "configurePresets": [
    {
      "name": "android-arm64",
      "displayName": "Android ARM64 Build Configuration",
      "description": "Build for Android ARM64 platform",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "arm64-android",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{ANDROID_NDK_ROOT}/build/cmake/android.toolchain.cmake",
        "VCPKG_ROOT": "$env{VCPKG_ROOT}",
        "CMAKE_SYSTEM_NAME": "Android",
        "CMAKE_SYSTEM_VERSION": "$env{PLATFORM_VERSION_NUMBER}",
        "ANDROID_PLATFORM": "$env{PLATFORM_VERSION_NUMBER}",
        "CMAKE_ANDROID_ARCH_ABI": "arm64-v8a",
        "ANDROID_ABI": "arm64-v8a",
        "CMAKE_ANDROID_NDK": "$env{ANDROID_NDK_HOME}",
        "CMAKE_ANDROID_STL_TYPE": "c++_shared",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "android-arm",
      "displayName": "Android ARM Build Configuration",
      "description": "Build for Android ARM platform",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Android",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "arm64-android",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{ANDROID_NDK_ROOT}/build/cmake/android.toolchain.cmake",
        "VCPKG_ROOT": "$env{VCPKG_ROOT}",
        "CMAKE_SYSTEM_VERSION": "$env{PLATFORM_VERSION_NUMBER}",
        "ANDROID_PLATFORM": "$env{PLATFORM_VERSION_NUMBER}",
        "CMAKE_ANDROID_ARCH_ABI": "armeabi-v7a",
        "CMAKE_ANDROID_NDK": "$env{ANDROID_NDK_HOME}",
        "CMAKE_ANDROID_STL_TYPE": "c++_shared",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "android-arm64",
      "configurePreset": "android-arm64"
    },
    {
      "name": "android-arm",
      "configurePreset": "android-arm"
    }
  ]
}
